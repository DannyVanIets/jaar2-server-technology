@model Urenregistratie.Models.RegistratieModel

@{
    ViewData["Title"] = "View";
}

<h1>Registreer uren week 24-2020</h1>

<h4>Medewerker: @ViewData["Medewerker"]</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="RegistreerUrenMedewerker">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RegistratieId" />
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Maandag" class="control-label"></label>
                    <input asp-for="Maandag" class="form-control" />
                    <span asp-validation-for="Maandag" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dinsdag" class="control-label"></label>
                    <input asp-for="Dinsdag" class="form-control" />
                    <span asp-validation-for="Dinsdag" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Woensdag" class="control-label"></label>
                    <input asp-for="Woensdag" class="form-control" />
                    <span asp-validation-for="Woensdag" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Donderdag" class="control-label"></label>
                    <input asp-for="Donderdag" class="form-control" />
                    <span asp-validation-for="Donderdag" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Vrijdag" class="control-label"></label>
                    <input asp-for="Vrijdag" class="form-control" />
                    <span asp-validation-for="Vrijdag" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Zaterdag" class="control-label"></label>
                    <input asp-for="Zaterdag" class="form-control" />
                    <span asp-validation-for="Zaterdag" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Zondag" class="control-label"></label>
                    <input asp-for="Zondag" class="form-control" />
                    <span asp-validation-for="Zondag" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-controller="Medewerker" asp-action="Index">Annuleren</a>
                    <input type="submit" value="Vastleggen" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}