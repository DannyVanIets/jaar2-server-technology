@model IEnumerable<TheaterReservering.Models.KlantModel>

@using System.Net.Http;
@using System.Net.Http.Headers;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Woonplaats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservingen)
            </th>
            <th>
                Prijs
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Woonplaats)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @{
                        if (item.Reservingen != null || item.Reservingen.Count > 1)
                        {
                            var counter = 0;
                            foreach (var reservering in item.Reservingen)
                            {
                                @reservering.Naam @:&nbsp;
                                counter++;
                                if (counter == 4)
                                {
                                    <br>
                                }
                            }
                        }
                        else
                        {
                            <p>Geen</p>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prijs)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.KlantId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.KlantId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.KlantId">Delete</a> |
                    <a asp-controller="Reservering" asp-action="EditWithKlantId" asp-route-id="@item.KlantId">Reserveren</a>
                </td>
            </tr>
        }
        <tr style="font-weight: bold;">
            <td>
                Aantal klanten is:
            </td>
            <td>
                @Model.Count()
            </td>
        </tr>
    </tbody>
</table>
