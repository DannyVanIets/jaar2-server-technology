@model IEnumerable<Schaakclubuitslag.Models.PartijModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uitslag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SCUSpeler)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Dag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uitslag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SCUSpeler.Naam)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PartijId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PartijId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PartijId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
