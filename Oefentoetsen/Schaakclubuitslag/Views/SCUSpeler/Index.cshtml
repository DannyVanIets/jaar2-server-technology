@model IEnumerable<Schaakclubuitslag.Models.SCUSpelerModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SCUSpelerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SCUSpelerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SCUSpelerId">Delete</a> |
                <a asp-action="CreatePartij" class="btn btn-primary" asp-route-id="@item.SCUSpelerId">Create partij</a>
            </td>
        </tr>
}
    </tbody>
</table>
