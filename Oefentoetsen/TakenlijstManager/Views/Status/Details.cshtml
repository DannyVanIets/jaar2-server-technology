@model TakenlijstManager.Models.Status

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Status</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naam)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naam)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VolgendeStatus)
        </dt>
        <dd class="col-sm-10">
            @if (Model.VolgendeStatus == 0)
            {
                <p>Geen</p>
            }
            else if (Model.VolgendeStatus == 1)
            {
                <p>To do</p>
            }
            else if (Model.VolgendeStatus == 2)
            {
                <p>In progress</p>
            }
            else if (Model.VolgendeStatus == 3)
            {
                <p>Done</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.StatusId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
